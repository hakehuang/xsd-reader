      <xs:minInclusive value="0"/>
      <xs:maxInclusive value="63"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="sevenBits">
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="0"/>
      <xs:maxInclusive value="127"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- RTE specific data types  -->
  <!-- file category type -->
  <xs:simpleType name="FileCategoryType">
    <xs:restriction base="xs:token">
      <xs:enumeration value="doc"/>
      <xs:enumeration value="header"/>
      <xs:enumeration value="library"/>
      <xs:enumeration value="object"/>
      <xs:enumeration value="source"/>
      <xs:enumeration value="flash"/>
      <xs:enumeration value="other"/>
      <!-- temporary for backward compatibility, remove when all pdsc files are updated! -->
      <xs:enumeration value="svd"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="MaxInstancesType">
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="1"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- version can contain one or more of alphanumeric charachters and symbols '_' '-' '.' 
       Important: version pattern shallremain the same while versions change
  -->
  <xs:simpleType name="VersionType">
    <xs:restriction base="xs:string">
      <xs:pattern value="[\.\-_A-Za-z0-9]+"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="InstanceType">
    <xs:simpleContent>
      <xs:extension base='xs:string'>
        <xs:attribute name="index" type="xs:decimal" use="optional"/>
        <xs:attribute name="removed" type="xs:boolean" use="optional"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="PackageType">
    <xs:sequence>
      <!-- list of target infos and settins  -->
      <xs:element name="targetInfos"  type="UsedTargetInfosType"  minOccurs="0"/>    
    </xs:sequence>
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="vendor" type="xs:string" use="required"/>
    <xs:attribute name="version" type="xs:string" use="required"/>
    <xs:attribute name="description" type="xs:string" use="optional"/>
    <xs:attribute name="url" type="xs:anyURI" use="optional"/>
    <!-- optional: click through license file name and relative path -->
    <xs:attribute name="license" type="xs:string" use="optional"/>
  </xs:complexType>

  <xs:complexType name="PackageFilterType">
    <xs:sequence>
      <!-- list of target infos and settins  -->
      <xs:element name="targetInfos"  type="UsedTargetInfosType"  minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="PackagesType">
    <xs:sequence>
      <xs:element name="filter" type="PackageFilterType" minOccurs="0" maxOccurs="1"/>
      <xs:element name="package" type="PackageType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>



  <!-- Version mode  -->
  <xs:simpleType name="VersionMatchModeType">
    <xs:restriction base="xs:token">
      <!-- version agnostic (implicit default)-->
      <xs:enumeration value="any"/>
      <!-- exact component version is required -->
      <xs:enumeration value="fixed"/>
      <!-- the latests available version is required -->
      <xs:enumeration value="latest"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- deprecated target info to support legacy projects, TargetInfoType is used in new projects  -->
  <xs:complexType name="TargetType">
    <xs:simpleContent>
      <xs:extension base='xs:string'>
        <!-- flag indicating that the component is explicitly ignored by the targed (default false) -->
        <xs:attribute name="excluded" type="xs:boolean" use="optional"/>
        <!-- number of instances for this target -->
        <xs:attribute name="instances" type="xs:integer" use="optional"/>
        <!-- version match mode : fixed, latest or any (default) -->
        <xs:attribute name="versionMatchMode" type="VersionMatchModeType" use="optional"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <!-- target info, describes target settings  -->
  <xs:complexType name="TargetInfoType">
    <xs:all>
      <xs:element name="mem">
        <xs:complexType>
          <xs:all>
            <xs:element name="RVCTCodeConst" />
            <xs:element name="RVCTZI" />
            <xs:element name="RVCTOtherData" />
          </xs:all>
        </xs:complexType>
      </xs:element>
      <xs:element name="c">
        <xs:complexType>
          <xs:all>
            <xs:element name="Optim" type="sevenBits" />
            <xs:element name="oTime" type="twoBits" />
            <xs:element name="MiscControls" />
            <xs:element name="Define" />
            <xs:element name="Undefine" />
          </xs:all>
        </xs:complexType>
      </xs:element>
      <xs:element name="asm">
        <xs:complexType>
          <xs:all>
            <xs:element name="MiscControls" />
            <xs:element name="Define" />
            <xs:element name="Undefine" />
          </xs:all>
        </xs:complexType>
      </xs:element>
    </xs:all>
    <!-- target name -->
    <xs:attribute name="name" type="xs:string" use="required"/>
    <!-- flag indicating that the component is explicitly ignored by the targed (default false) -->
    <xs:attribute name="excluded" type="xs:boolean" use="optional"/>
    <!-- flag indicating that the component is added to library build, only relevant when building a library (default false) -->
    <xs:attribute name="includeInLib" type="xs:boolean" use="optional"/>
    <!-- number of instances for this target -->
    <xs:attribute name="instances" type="xs:integer" use="optional"/>
    <!-- version match mode : fixed, latest or any (default) -->
    <xs:attribute name="versionMatchMode" type="VersionMatchModeType" use="optional"/>
  </xs:complexType>


  <xs:complexType name="UsedTargetsType">
    <xs:sequence>
      <xs:element name="target" type="TargetType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="UsedTargetInfosType">
    <xs:sequence>
      <xs:element name="targetInfo" type="TargetInfoType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  
  <xs:complexType name="ApiType">
    <xs:all>
      <!-- a package origin-->
      <xs:element name="package" type="PackageType" minOccurs="0"/>
      <!-- list of targets that use this component (deprecated)--> 
      <xs:element name="targets"  type="UsedTargetsType"  minOccurs="0"/>
      <!-- list of target infos and settins  -->
      <xs:element name="targetInfos"  type="UsedTargetInfosType"  minOccurs="0"/>
    </xs:all>
    <xs:attribute name="Cclass" type="xs:string" use="required"/>
    <xs:attribute name="Cgroup" type="xs:string" use="required"/>
    <xs:attribute name="exclusive" type="xs:boolean" use="optional"/>
    <xs:attribute name="Capiversion" type="VersionType" use="optional"/>
  </xs:complexType>

  <xs:complexType name="ApisType">
    <xs:sequence>
      <xs:element name="api" type="ApiType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  
  <xs:complexType name="ComponentType">
    <xs:all>
      <!-- a package origin-->
      <xs:element name="package" type="PackageType" minOccurs="0"/>
      <!-- list of targets that use this component (deprecated)-->
      <xs:element name="targets"  type="UsedTargetsType"  minOccurs="0"/>
      <!-- list of target infos and settins  -->
      <xs:element name="targetInfos"  type="UsedTargetInfosType"  minOccurs="0"/>
    </xs:all>
    <!-- component identity attributes -->
    <xs:attribute name="Cvendor"  type="xs:string" use="optional"/>
    <xs:attribute name="Cbundle"  type="xs:string" use="optional"/>
    <xs:attribute name="Cclass"   type="xs:string" use="required"/>
    <xs:attribute name="Cgroup"   type="xs:string" use="required"/>
    <xs:attribute name="Csub"     type="xs:string" use="optional"/>
    <xs:attribute name="Cvariant" type="xs:string" use="optional"/>
    <xs:attribute name="Cversion" type="VersionType" use="optional"/>
    <!-- component' api version -->
    <xs:attribute name="Capiversion" type="VersionType" use="optional"/>
    <!-- component attribute for referencing a condition specified in conditions section above -->
    <xs:attribute name="condition" type="xs:string" use="optional"/>
    <!-- maximum allowed number of instances of a component in a project, default - 1-->
    <xs:attribute name="maxInstances" type="MaxInstancesType" use="optional"/>
    <xs:attribute name="RTE_Components_h" type="xs:string" use="optional"/>

    <!-- for instance specifics -->
    <xs:attribute name="api" type= "xs:boolean" use="optional"/>
    <!-- flag indicating that targets use individual version/variant settings (default is false)-->
    <xs:attribute name="isTargetSpecific" type="xs:boolean" use="optional"/>

    <!-- for device-specific component, deprecated -->
    <xs:attribute name="Dname" type="xs:string" use="optional"/>

  </xs:complexType>


  <xs:complexType name="ComponentsType">
    <xs:sequence>
      <xs:element name="component" type="ComponentType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- file type definition -->
  <xs:complexType name="FileType">
    <xs:all>
      <!-- instance name and index-->
      <xs:element name="instance"  type="InstanceType" minOccurs="1" maxOccurs="1"/>
      <!-- originating component -->
      <xs:element name="component" type="ComponentType" minOccurs="1" maxOccurs="1"/>
      <!-- originating package -->
      <xs:element name="package"   type="PackageType" minOccurs="1" maxOccurs="1"/>
      <!-- list of targets that use this file (deprecated)-->
      <xs:element name="targets"  type="UsedTargetsType"  minOccurs="0"/>
      <!-- list of target infos (no settings at file level)  -->
      <xs:element name="targetInfos"  type="UsedTargetInfosType"  minOccurs="0"/>
    </xs:all>
    <!-- file attributes -->
    <xs:attribute name="condition" type="xs:string" use="optional"/>
    <xs:attribute name="category"  type="FileCategoryType" use ="required"/>
    <!-- path + filename + extension -->
    <xs:attribute name="name"    type ="xs:string" use="required" />
    <!-- copy file to project folder:  deprecated, use attr="config" instead  -->
    <xs:attribute name="copy"    type ="xs:string" use="optional"/>
    <!-- file item action attribute : config (copy to project, template, interface)  -->
    <xs:attribute name="attr"    type="xs:string" use ="optional"/>
    <!-- description for "template" or "interface" files. Multiple items are combined when they have the same select attribute  -->
    <xs:attribute name="select"  type="xs:string" use ="optional"/>
    <!-- path(s) to find source files for a library, paths are delimited with semicolon (;) -->
    <xs:attribute name="src"     type="xs:string" use ="optional"/>
    <!-- simple file version: to be used by RTE copy file action to see whether the file needs updating in project -->
    <xs:attribute name="version" type ="VersionType" use="optional"/>

    <!-- for device-specific files -->
    <xs:attribute name="Dname" type="xs:string" use="optional"/>

  </xs:complexType>

  <xs:complexType name="FilesType">
    <xs:sequence>
      <xs:element name="file" type="FileType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>


</xs:schema>