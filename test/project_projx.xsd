<?xml version="1.0" encoding="UTF-16"?>
<xs:schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
  attributeFormDefault="unqualified" 
  elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="Project">
    <xs:complexType>      
      <xs:sequence>
        <xs:element name="SchemaVersion" type="xs:string" />
        <!--Header string-->
        <xs:element name="Header" type="xs:string" />
        <xs:element minOccurs="1" maxOccurs="1" name ="Targets">
          <xs:complexType>
            <xs:sequence>
              <xs:element minOccurs="1" maxOccurs="unbounded" name="Target"> <!--specification of target options-->
                <xs:complexType>
                  <xs:sequence> <!--at least one target each project-->
                    <xs:element name="TargetName" type="xs:string"/>
                    <xs:element name="ToolsetNumber" type="HexaDecimal"></xs:element>
                    <xs:element name="ToolsetName" type="xs:string"></xs:element>
                    <xs:element minOccurs="0" maxOccurs="1" name="TargetOption"> <!--definition of target options-->
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element ref="TargetCommonOption"/>
                          <xs:element ref="CommonProperty"/>
                          <xs:element ref="DllOption"/>
                          <xs:element ref="DebugOption"/>
                          <xs:element ref="Utilities"/>
                          <xs:choice>
                            <xs:element name="Target166">
                              <xs:complexType>
                                <xs:sequence>
                                  <xs:element ref="Target166Misc"></xs:element>
                                  <xs:element ref="C166"></xs:element>
                                  <xs:element ref="Ec166"></xs:element>
                                  <xs:element ref="A166"></xs:element>
                                  <xs:element ref="L166"></xs:element>
                                </xs:sequence>
                              </xs:complexType>
                            </xs:element>
                            <xs:element name="Target51">
                              <xs:complexType>
                                <xs:sequence>
                                  <xs:element ref="Target51Misc"></xs:element>
                                  <xs:choice>
                                    <xs:element ref="C251"></xs:element>
                                    <xs:element ref="C51"></xs:element>
                                  </xs:choice>
                                  <xs:element ref="Ax51"></xs:element>
                                  <xs:element ref="Lx51"></xs:element>
                                </xs:sequence>
                              </xs:complexType>
                            </xs:element>
                            <xs:element name="Target251">
                              <xs:complexType>
                                <xs:sequence>
                                  <xs:element ref="Target251Misc"></xs:element>
                                  <xs:element ref="C251"></xs:element>
                                  <xs:element ref="Ax51"></xs:element>
                                  <xs:element ref="Lx51"></xs:element>
                                </xs:sequence>
                              </xs:complexType>
                            </xs:element>
                            <xs:element name="TargetArm">
                              <xs:complexType>
                                <xs:sequence>
                                  <xs:element ref="ArmMisc"></xs:element>
                                  <xs:element ref="Carm"></xs:element>
                                  <xs:element ref="Aarm"></xs:element>
                                  <xs:element ref="LDarm"></xs:element>
                                </xs:sequence>
                              </xs:complexType>
                            </xs:element>
                            <xs:element name="TargetArmAds">
                              <xs:complexType>
                                <xs:sequence>
                                  <xs:element ref="ArmAdsMisc"></xs:element>
                                  <xs:element ref="Cads"></xs:element>
                                  <xs:element ref="Aads"></xs:element>
                                  <xs:element ref="LDads"></xs:element>
                                </xs:sequence>
                              </xs:complexType>
                            </xs:element>
                          </xs:choice>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element minOccurs="0" maxOccurs="1" name="Groups">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element minOccurs="1" maxOccurs="unbounded" name="Group"> <!--1 or more groups contained in the target-->
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element name="GroupName" type="xs:string"/>
                                <xs:element minOccurs="0" maxOccurs="1" name="GroupOption">
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element ref="CommonProperty" />
                                      <xs:choice>
                                        <xs:element name="Group51">
                                          <xs:complexType>
                                            <xs:sequence>
                                              <xs:choice>
                                                <xs:element ref="C251" />
                                                <xs:element ref="C51" />
                                              </xs:choice>
                                              <xs:element ref="Ax51" />
                                            </xs:sequence>
                                          </xs:complexType>
                                        </xs:element>
                                        <xs:element name="Group251">
                                          <xs:complexType>
                                            <xs:sequence>
                                              <xs:element ref="C251" />
                                              <xs:element ref="Ax51" />
                                            </xs:sequence>
                                          </xs:complexType>
                                        </xs:element>
                                        <xs:element name="Group166">
                                          <xs:complexType>
                                            <xs:sequence>
                                              <xs:element ref="C166" />
                                              <xs:element ref="Ec166" />
                                              <xs:element ref="A166" />
                                            </xs:sequence>
                                          </xs:complexType>
                                        </xs:element>
                                        <xs:element name="GroupArm">
                                          <xs:complexType>
                                            <xs:sequence>
                                              <xs:element ref="Carm" />
                                              <xs:element ref="Aarm" />
                                            </xs:sequence>
                                          </xs:complexType>
                                        </xs:element>
                                        <xs:element name="GroupArmAds">
                                          <xs:complexType>
                                            <xs:sequence>
                                              <xs:element ref="Cads" />
                                              <xs:element ref="Aads" />
                                            </xs:sequence>
                                          </xs:complexType>
                                        </xs:element>
                                      </xs:choice>
                                    </xs:sequence>
                                  </xs:complexType>
                                </xs:element>
                                <xs:element name="Files" minOccurs="0" maxOccurs="1">
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element minOccurs="1" maxOccurs="unbounded" name="File">
                                        <xs:complexType>
                                          <xs:sequence>
                                            <xs:element name="FileName" type="xs:string"/>
                                            <xs:element name="FileType" type="xs:byte"/>
                                            <xs:element name="FilePath" type="xs:string"/>
                                            <xs:element minOccurs="0" maxOccurs="unbounded" name="FileOption">
                                              <xs:complexType>
                                                <xs:sequence>
                                                  <xs:element ref="CommonProperty" />
                                                  <xs:choice>
                                                    <xs:element name="File51">
                                                      <xs:complexType>
                                                        <xs:choice>
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="C251" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="C51" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Ax51" />
                                                        </xs:choice>
                                                      </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="File251">
                                                      <xs:complexType>
                                                        <xs:choice>
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="C251" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Ax51" />
                                                        </xs:choice>
                                                      </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="File166">
                                                      <xs:complexType>
                                                        <xs:choice>
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="C166" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Ec166" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="A166" />
                                                        </xs:choice>
                                                      </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="FileArm">
                                                      <xs:complexType>
                                                        <xs:choice>
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Carm" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Aarm" />
                                                        </xs:choice>
                                                      </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="FileArmAds">
                                                      <xs:complexType>
                                                        <xs:choice>
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Cads" />
                                                          <xs:element minOccurs="0" maxOccurs="1" ref="Aads" />
                                                        </xs:choice>
                                                      </xs:complexType>
                                                    </xs:element>
                                                  </xs:choice>
                                                </xs:sequence>
                                              </xs:complexType>
                                            </xs:element>
                                          </xs:sequence>
                                        </xs:complexType>
                                      </xs:element>
                                    </xs:sequence>
                                  </xs:complexType>
                              </xs:element>
                              </xs:sequence>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <!-- RTE data -->
        <xs:element name="RTE" nillable="true" minOccurs="0" maxOccurs="1">
          <xs:complexType>
            <xs:all>
              <xs:element name="packages" type="PackagesType" minOccurs="0"/>
              <xs:element name="apis" type="ApisType" minOccurs="0"/>
              <xs:element name="components" type="ComponentsType" minOccurs="0"/>
              <xs:element name="files" type="FilesType" minOccurs="0"/>
            </xs:all>
            <xs:attribute name="name" type="xs:string" use="optional"/>
            <!-- RTE version for future use-->
            <xs:attribute name="version" type="VersionType" use="optional"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--common options specific to each target-->
  <xs:element name="TargetCommonOption">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Device" type="xs:string" />
        <xs:element name="Vendor" type="xs:string" />
        <xs:element name="PackID"  type="xs:string" maxOccurs="1" minOccurs="0"/>
        <xs:element name="PackURL" type="xs:string" maxOccurs="1" minOccurs="0"/>
        <xs:element name="Cpu" type="xs:string" />

        <xs:element name="FlashUtilSpec" type="xs:string" />
        <xs:element name="StartupFile" type="xs:string" />
        <xs:element name="FlashDriverDll" type="xs:string" />
        <xs:element name="DeviceId" type="xs:string" />
        
        <xs:element name="RegisterFile" type="xs:string" />
        <xs:element name="MemoryEnv" type="xs:string" />
        <xs:element name="Cmp" type="xs:string" />
        <xs:element name="Asm" type="xs:string" />
        <xs:element name="Linker" type="xs:string" />
        <xs:element name="OHString" type="xs:string" />
        
        <xs:element name="InfinionOptionDll" type="xs:string" />
        <xs:element name="SLE66CMisc" type="xs:string" />
        <xs:element name="SLE66AMisc" type="xs:string" />
        <xs:element name="SLE66LinkerMisc" type="xs:string" />

        <!--05.10.2010, optional SFDFile-->
        <xs:element minOccurs="0" maxOccurs="1" name="SFDFile" type="xs:string"/>

        <xs:element name="UseEnv" type="xs:unsignedByte"/>
        <xs:element name="BinPath" type="xs:string" />
        <xs:element name="IncludePath" type="xs:string" />
        <xs:element name="LibPath" type="xs:string" />
        <xs:element name="RegisterFilePath" type="xs:string" />
        <xs:element name="DBRegisterFilePath" type="xs:string" />

        <xs:element name="TargetStatus">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Error" type="switcher" />
              <xs:element name="ExitCodeStop" type="switcher" />
              <xs:element name="ButtonStop" type="switcher" />
              <xs:element name="NotGenerated" type="switcher" />
              <xs:element name="InvalidFlash" type="switcher" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        
        <xs:element name="OutputDirectory" type="xs:string" />
        <xs:element name="OutputName" type="xs:string" />
        
        <xs:element name="CreateExecutable" type="switcher" />
        <xs:element name="CreateLib" type="switcher" />
        <xs:element name="CreateHexFile" type="switcher" />
        <xs:element name="DebugInformation" type="switcher" />
        <xs:element name="BrowseInformation" type="switcher" />
        <xs:element name="ListingPath" type="xs:string" />
        <xs:element name="HexFormatSelection" type="xs:unsignedByte" />
        <xs:element name="Merge32K" type="switcher" />
        
        <xs:element name="CreateBatchFile" type="switcher" />
        <xs:element name="BeforeCompile" type="BeforeCompileType"/>
        
        <xs:element name="BeforeMake" type="UserProgSettings"/>
        <xs:element name="AfterMake" type="UserProgSettings"/>
        <xs:element name="SelectedForBatchBuild" type="switcher" />
        <xs:element name="SVCSIdString" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="DllOption">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="SimDllName" type="xs:string" />
        <xs:element name="SimDllArguments" type="xs:string" />
        <xs:element name="SimDlgDll" type="xs:string" />
        <xs:element name="SimDlgDllArguments" type="xs:string" />
        <xs:element name="TargetDllName" type="xs:string" />
        <xs:element name="TargetDllArguments" type="xs:string" />
        <xs:element name="TargetDlgDll" type="xs:string" />
        <xs:element name="TargetDlgDllArguments" type="xs:string" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="DebugOption">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="OPTHX">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="HexSelection" type="xs:unsignedByte" />
              <xs:element name="HexRangeLowAddress" type="xs:unsignedInt" />
              <xs:element name="HexRangeHighAddress" type="xs:unsignedInt" />
              <xs:element name="HexOffset" type="xs:unsignedInt"/>
              <xs:element name="Oh166RecLen" type="xs:unsignedInt" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="Simulator">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="UseSimulator" type="switcher" />
              <xs:element name="LoadApplicationAtStartup" type="switcher" />
              <xs:element name="RunToMain" type="switcher" />
              <xs:element name="RestoreBreakpoints" type="switcher" />
              <xs:element name="RestoreWatchpoints" type="switcher" />
              <xs:element name="RestoreMemoryDisplay" type="switcher" />
              <xs:element name="RestoreFunctions" type="switcher" />
              <xs:element name="RestoreToolbox" type="switcher" />
              <xs:element name="LimitSpeedToRealTime" type="switcher" />
              <xs:element minOccurs="0" maxOccurs="1" name="RestoreSysVw" type="switcher" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="Target">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="UseTarget" type="switcher" />
              <xs:element name="LoadApplicationAtStartup" type="switcher" />
              <xs:element name="RunToMain" type="switcher" />
              <xs:element name="RestoreBreakpoints" type="switcher" />
              <xs:element name="RestoreWatchpoints" type="switcher" />
              <xs:element name="RestoreMemoryDisplay" type="switcher" />
              <xs:element name="RestoreFunctions" type="switcher" />
              <xs:element name="RestoreToolbox" type="switcher" />
			  <!-- RestoreTracepoints optional for backwards compatibility -->
              <xs:element minOccurs="0" maxOccurs="1" name="RestoreTracepoints" type="switcher" />
              <xs:element minOccurs="0" maxOccurs="1" name="RestoreSysVw" type="switcher" />
              <xs:element minOccurs="0" maxOccurs="1" name="UsePdscDebugDescription" type="switcher" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="RunDebugAfterBuild" type="switcher" />
        <xs:element name="TargetSelection" type="xs:integer"/>
        <xs:element name="SimDlls">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="CpuDll" type="xs:string"/>
              <xs:element name="CpuDllArguments" type="xs:string"/>
              <xs:element name="PeripheralDll" type="xs:string"/>
              <xs:element name="PeripheralDllArguments" type="xs:string"/>
              <xs:element name="InitializationFile" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="TargetDlls">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="CpuDll" type="xs:string"/>
              <xs:element name="CpuDllArguments" type="xs:string"/>
              <xs:element name="PeripheralDll" type="xs:string"/>
              <xs:element name="PeripheralDllArguments" type="xs:string"/>
              <xs:element name="InitializationFile" type="xs:string"/>
              <xs:element name="Driver" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="Utilities">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Flash1">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="UseTargetDll" type="switcher" /> <!--Use target dll for flash-->
              <xs:element name="UseExternalTool" type="switcher" /> <!--use 3rd party tool for flash-->
              <xs:element name="RunIndependent" type="switcher" />
              <xs:element name="UpdateFlashBeforeDebugging" type="switcher" />
              <xs:element name="Capability" type="xs:integer" />
              <xs:element name="DriverSelection" type="xs:integer" />
            </xs:sequence>
          </xs:complexType>
        </xs:element> <!--Flags-->
        <xs:element name="bUseTDR" type="xs:integer"/> <!--TargetDriver-->
        <xs:element name="Flash2" /> <!--TargetDriver-->
        <xs:element name="Flash3" /> <!--ExternalTool-->
        <xs:element name="Flash4" /> <!--Inifile-->
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--options specific to target 166-->
  <xs:element name="Target166Misc">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="MemoryModel" type="xs:unsignedByte" />
        <xs:element name="RTOS" type="xs:unsignedByte" />
        
        <xs:element name="NearData" type="xs:unsignedShort" />
        <xs:element name="iData" type="xs:unsignedShort" />
        <xs:element name="sData" type="xs:unsignedShort" />
        <xs:element name="bData" type="xs:unsignedShort" />
        
        <xs:element name="Mod167" type="switcher" />
        <xs:element name="ModV2" type="switcher" />
        <xs:element name="UseOnChipRom" type="switcher" />
        <xs:element name="UseOnChipXramCan" type="switcher" />
        <xs:element name="UseOnChipXram2" type="switcher" />
        <xs:element name="NearRamMemory" type="xs:unsignedByte" />
        <xs:element name="NearRomMemory" type="xs:unsignedByte" />
        <xs:element name="UseIrom2" type="switcher" />
        <xs:element name="UseIrom3" type="switcher" />
        <xs:element name="UseXram3" type="switcher" />

        <xs:element name="OnChipMemories">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Ocm1" type="MemoryRange"/>
              <xs:element name="Ocm2" type="MemoryRange"/>
              <xs:element name="Ocm3" type="MemoryRange"/>
              <xs:element name="Ocm4" type="MemoryRange"/>
              <xs:element name="Ocm5" type="MemoryRange"/>
              <xs:element name="Ocm6" type="MemoryRange"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="C166">
    <xs:complexType mixed="true">
      <xs:sequence>
        <xs:element name="Optimize" type="xs:unsignedByte" />
        <xs:element name="SpeedSize" type="xs:unsignedByte" />
        
        <xs:element name="RegisterColoring" type="twoBits" />
        <xs:element name="UseStaticMemory" type="twoBits" />
        <xs:element name="WarningLevel" type="xs:unsignedByte" />
        <xs:element name="AliasChecking" type="twoBits" />
        <xs:element name="VariablesInOrder" type="twoBits" />
        <xs:element name="CharAsUnsignedChar" type="twoBits" />
        <xs:element name="NoDppSave" type="twoBits" />
        <xs:element name="Float64" type="twoBits" />
        <xs:element name="SaveTempVar" type="twoBits" />
        <xs:element name="ReorderInstruction" type="twoBits" />
        
        <xs:element name="VariousControls" type="VariousControlsType" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="Ec166">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="WarningLevel" type="xs:unsignedByte"/>
        <xs:element name="UnsignedChar" type="twoBits"/>
        
        <xs:element name="VariousControls" type="VariousControlsType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="A166">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="UseMPL" type="twoBits" />
        <xs:element name="CaseSensitiveSymbols" type="twoBits" />
        <xs:element name="VariousControls" type="VariousControlsType"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="L166">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="UseLinkFile" type="switcher" />
        <xs:element name="LinkerCmdFile" type="xs:string"/>
        <xs:element name="LinkOnly" type="switcher" />
        <xs:element name="UseTargetSet" type="switcher" />
        <xs:element name="DppUsage" type="switcher" />
        <xs:element name="nDataSelection" type="xs:unsignedByte" />
        <xs:element name="nConstSelection" type="xs:unsignedByte" />
        <xs:element name="NearDataString" type="xs:string"/>
        <xs:element name="NearConstString" type="xs:string"/>
        <xs:element name="iStartStopString" type="xs:string" />
        <xs:element name="InterruptVectorAddress" type="xs:string"/>
        <xs:element name="WarningLevel" type="xs:unsignedByte" />
        <xs:element name="DisableWarningNumbers" type="xs:string"/>
        <xs:element name="Assign" type="xs:string"/>
        <xs:element name="Registerbank" type="xs:string"/>
        <xs:element name="Reserve" type="xs:string"/>
        <xs:element name="MiscControls" type="xs:string"/>
        <xs:element name="UserClasses" type="xs:string"/>
        <xs:element name="UserSection" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--options specific to target 51-->
  <xs:element name="Target51Misc">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="MemoryModel" type="xs:unsignedShort" />
        <xs:element name="RTOS" type="xs:unsignedShort" />
        <xs:element name="RomSize" type="xs:unsignedShort" />
        <xs:element name="DataHold" type="xs:unsignedLong" />
        <xs:element name="XDataHold" type="xs:unsignedLong" />
        
        <xs:element name="UseOnchipRom" type="switcher" />
        <xs:element name="UseOnchipArithmetic" type="switcher" />
        <xs:element name="UseMultipleDPTR" type="switcher" />
        <xs:element name="UseOnchipXram" type="switcher" />
        <xs:element name="HadIRAM" type="switcher" />
        <xs:element name="HadXRAM" type="switcher" />
        <xs:element name="HadIROM" type="switcher" />
        <xs:element name="Moda2" type="switcher" />
        <xs:element name="Moddp2" type="switcher" />
        <xs:element name="Modp2" type="switcher" />
        <xs:element name="Mod517dp" type="switcher" />
        <xs:element name="Mod517au" type="switcher" />
        <xs:element name="Mode2" type="switcher" />
        <xs:element name="useCB" type="switcher" />
        <xs:element name="useXB" type="switcher" />
        <xs:element name="useL251" type="switcher" />
        <xs:element name="useA251" type="switcher" />
        <xs:element name="Mx51" type="switcher" />
        <xs:element name="ModC812" type="switcher" />
        <xs:element name="ModCont" type="switcher" />
        <xs:element name="Lp51" type="switcher" />
